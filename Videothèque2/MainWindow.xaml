<Window x:Class="Videothèque2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Videothèque2"
        xmlns:viewModel="clr-namespace:Videothèque2.ViewModels"
        mc:Ignorable="d"
        Title="Vidéothèque" Height="375" Width="410">
    <Window.DataContext>
        <viewModel:MainWindowViewModel></viewModel:MainWindowViewModel>
    </Window.DataContext>
    <Window.Resources>
        <SolidColorBrush x:Key="WindowBrush" Color="Azure"/>
    </Window.Resources>
    <Window.Style>
        <Style TargetType="{x:Type Window}">
            <Setter Property="Background" Value="{StaticResource WindowBrush}"/>
        </Style>
    </Window.Style>
    <Grid>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Margin="0" Width="402">
            <MenuItem Header="Films" Command="{Binding LFilmCommand}"/>
            <MenuItem Header="Séries" Command="{Binding LSerieCommand}"/>
            <MenuItem Header="Ajout éléments" Command="{Binding AEltCommand}"/>
            <MenuItem Header="Programmation" Command="{Binding ProgrammationCommand}"/>
        </Menu>
        
        <Button Command="{Binding UpdateListCommand}" Content="Actualiser" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="35" Width="100"></Button>
        
        <ListView ItemsSource="{Binding ListElements}" SelectedItem="{Binding Element}" HorizontalAlignment="Left" Height="210" Margin="57,66,0,0" VerticalAlignment="Top" Width="297">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="197" Header="Titre" DisplayMemberBinding="{Binding Title}"/>
                    <GridViewColumn Width="100" Header="Type" DisplayMemberBinding="{Binding Type}" />
                </GridView>
            </ListView.View>
        </ListView
                  >
        <Button Command="{Binding ProgramEltCommand}" Content="Vu" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="90" Margin="151,0,151,30"></Button>
    </Grid>
</Window>

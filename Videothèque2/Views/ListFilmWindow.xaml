<Window x:Class="Videothèque2.ListFilmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Videothèque2"
        xmlns:viewModel="clr-namespace:Videothèque2.ViewModels"
        mc:Ignorable="d"
        Title="ListFilmWindow" Height="697.5" Width="1385">
    <Window.DataContext>
        <viewModel:ListFilmWindowViewModel></viewModel:ListFilmWindowViewModel>
    </Window.DataContext>
    <Window.Resources>
        <SolidColorBrush x:Key="WindowBrush" Color="Azure"/>
    </Window.Resources>
    <Window.Style>
        <Style TargetType="{x:Type Window}">
            <Setter Property="Background" Value="{StaticResource WindowBrush}"/>
        </Style>
    </Window.Style>
    <Grid>
        <TextBox x:Name="TitleF" HorizontalAlignment="Left" Height="23" Margin="232,99,0,0" TextWrapping="Wrap" Text="Titre" VerticalAlignment="Top" Width="120"/>
        <DatePicker x:Name="LastView" HorizontalAlignment="Left" Margin="559,99,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.325,0.014"/>

        <ListView x:Name="ListFilmView" HorizontalAlignment="Left" Height="366" Margin="59,197,0,0" VerticalAlignment="Top" Width="1260">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="50" Header="#" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Width="350" Header="Titre" DisplayMemberBinding="{Binding Title}"/>
                    <GridViewColumn Width="200" Header="Vu le" DisplayMemberBinding="{Binding LastView}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Click="Button_Click" Content="Voir" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,25" Width="150"></Button>
    </Grid>
</Window>

<Window x:Class="Videothèque2.ListSerieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Videothèque2"
        xmlns:viewModel="clr-namespace:Videothèque2.ViewModels"
        mc:Ignorable="d"
        Title="Liste des Séries" Height="500" Width="900">
    <Window.DataContext>
        <viewModel:ListSerieWindowViewModel></viewModel:ListSerieWindowViewModel>
    </Window.DataContext>
    <Window.Resources>
        <SolidColorBrush x:Key="WindowBrush" Color="Azure"/>
    </Window.Resources>
    <Window.Style>
        <Style TargetType="{x:Type Window}">
            <Setter Property="Background" Value="{StaticResource WindowBrush}"/>
        </Style>
    </Window.Style>
    <Grid>
        <TextBox x:Name="TitleS" HorizontalAlignment="Left" Height="23" Margin="63,36,0,0" TextWrapping="Wrap" Text="Titre" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="NbSeason" HorizontalAlignment="Left" Height="23" Margin="274,36,0,0" TextWrapping="Wrap" Text="NbSaison" VerticalAlignment="Top" Width="120"/>
        <Label Content="Vu le :" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="492,31,350,0" Width="50"/>
        <DatePicker x:Name="LastView" HorizontalAlignment="Left" Margin="547,33,0,0" VerticalAlignment="Top"/>
        <Label x:Name="NbViewS" Content="0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="22" Margin="747,33,123,0"/>
        <Label Content="fois" HorizontalAlignment="Center" VerticalAlignment="Top" Width="50" Margin="774,33,68,0"/>
        <TextBox x:Name="ContentS" HorizontalAlignment="Left" VerticalAlignment="Top" Text="Résumé" Width="331" Margin="63,85,0,0" Height="71"/>

        <ListView x:Name="ListSerieView" HorizontalAlignment="Left" Height="210" Margin="63,180,0,0" VerticalAlignment="Top" Width="792">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="50" Header="#" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Width="350" Header="Titre" DisplayMemberBinding="{Binding Title}"/>
                    <GridViewColumn Width="50" Header="Saison" DisplayMemberBinding="{Binding NbSeason}"/>
                    <GridViewColumn Width="100" Header="Vu le" DisplayMemberBinding="{Binding DateAddFormated}"/>
                    <GridViewColumn Width="100" Header="Vu le" DisplayMemberBinding="{Binding LastViewFormated}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Click="Button_Click" Content="Voir" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,25" Width="150"></Button>
    </Grid>
</Window>

<Window x:Class="Videothèque2.ListSerieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Videothèque2"
        xmlns:viewModel="clr-namespace:Videothèque2.ViewModels"
        mc:Ignorable="d"
        Title="Liste des Séries" Height="500" Width="900">
    <Window.DataContext>
        <viewModel:ListSerieWindowViewModel></viewModel:ListSerieWindowViewModel>
    </Window.DataContext>
    <Window.Resources>
        <SolidColorBrush x:Key="WindowBrush" Color="Azure"/>
    </Window.Resources>
    <Window.Style>
        <Style TargetType="{x:Type Window}">
            <Setter Property="Background" Value="{StaticResource WindowBrush}"/>
        </Style>
    </Window.Style>
    <Grid>
        <Label Content="{Binding Id}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="35" Margin="81,31,776,0" Height="28"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="139,36,0,0" TextWrapping="Wrap" Text="{Binding Title}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="274,36,0,0" TextWrapping="Wrap" Text="{Binding NbSeason}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Vu le :" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="492,31,350,0" Width="50"/>
        <DatePicker SelectedDate="{Binding LastView}" HorizontalAlignment="Left" Margin="547,33,0,0" VerticalAlignment="Top"/>
        <Label Content="{Binding NbView}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="22" Margin="747,33,123,0"/>
        <Label Content="fois" HorizontalAlignment="Center" VerticalAlignment="Top" Width="50" Margin="774,33,68,0"/>
        <TextBox HorizontalAlignment="Left" VerticalAlignment="Top" Text="{Binding Content}" Width="331" Margin="63,85,0,0" Height="71"/>
        <Button Command="{Binding EditSerieCommand}" Content="Modifier" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Margin="547,136,195,0"></Button>

        <ListView ItemsSource="{Binding ListSerieView}" SelectedItem="{Binding Serie}"  HorizontalAlignment="Left" Height="210" Margin="63,180,0,0" VerticalAlignment="Top" Width="790">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="50" Header="#" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Width="350" Header="Titre" DisplayMemberBinding="{Binding Title}"/>
                    <GridViewColumn Width="50" Header="Saison" DisplayMemberBinding="{Binding NbSeason}"/>
                    <GridViewColumn Width="100" Header="Ajouté le" DisplayMemberBinding="{Binding DateAddFormated}"/>
                    <GridViewColumn Width="100" Header="Vu le" DisplayMemberBinding="{Binding LastViewFormated}"/>
                </GridView>
            </ListView.View>
        </ListView>
        
        <Button Command="{Binding SelectListCommand}" Content="Voir" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="226,0,516,25" Width="100"></Button>
        <Button Command="{Binding DeleteSerieCommand}" Content="Supprimer" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" Margin="547,0,195,25"/>
    </Grid>
</Window>

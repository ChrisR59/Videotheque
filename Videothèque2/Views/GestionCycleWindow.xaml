<Window x:Class="Videothèque2.Views.GestionCycleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Videothèque2.Views"
        xmlns:viewModel="clr-namespace:Videothèque2.ViewModels"
        mc:Ignorable="d"
        Title="GestionCycleWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModel:GestionCycleViewModel></viewModel:GestionCycleViewModel>
    </Window.DataContext>
    <Grid>
        <ListView ItemsSource="{Binding ListCycles}" SelectedItem="{Binding Cycle}" HorizontalAlignment="Left" Height="269" Margin="63,70,0,0" VerticalAlignment="Top" Width="681">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="350" Header="Titre" DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Width="200" Header="Programmation" DisplayMemberBinding="{Binding StatusC}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Command="{Binding DeleteCycleCommand}" Content="Supprimer" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="322,0,320,25" Width="100"></Button>

    </Grid>
</Window>

<Window x:Class="Videothèque2.AddElementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Videothèque2"
        xmlns:viewModel="clr-namespace:Videothèque2.ViewModels"
        mc:Ignorable="d"
        Title="AddElementWindow" Height="600" Width="300">
    <Window.DataContext>
        <viewModel:AddElementWindowViewModel></viewModel:AddElementWindowViewModel>
    </Window.DataContext>
    <Window.Resources>
        <SolidColorBrush x:Key="WindowBrush" Color="#1f1f33"/>
    </Window.Resources>
    <Window.Style>
        <Style TargetType="{x:Type Window}">
            <Setter Property="Background" Value="{StaticResource WindowBrush}"/>
        </Style>
    </Window.Style>
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="110,30,0,0" TextWrapping="Wrap" Text="Ajout d'un Film" VerticalAlignment="Top" Foreground="White" FontSize="16"/>
        <Label Content="Nom" HorizontalAlignment="Left" Margin="49,62,0,0" VerticalAlignment="Top" Foreground="White" />
        <TextBox HorizontalAlignment="Left" Margin="97,60,0,0" TextWrapping="Wrap" Text="{Binding TitleF}" VerticalAlignment="Top" Width="150"/>
        <Label Content="Résumé" HorizontalAlignment="Left" Margin="33,97,0,0" VerticalAlignment="Top" Foreground="White" />
        <TextBox HorizontalAlignment="Left" Margin="97,95,0,0" TextWrapping="Wrap" Text="{Binding ContentF}" VerticalAlignment="Top" Width="150"/>
        <Button Command="{Binding AddPosterCommand}" Width="225" Margin="33,132,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock Text="Ajouter une affiche" TextAlignment="Center"></TextBlock>
        </Button>
        <Button Command="{Binding AFilmCommand}" Content="VALIDER" FontFamily="Verdana" Margin="50,180,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>

        <TextBlock HorizontalAlignment="Left" Margin="110,251,0,0" TextWrapping="Wrap" Text="Ajout d'une Série" VerticalAlignment="Top" FontSize="16" Foreground="White"/>
        <Label Content="Nom" HorizontalAlignment="Left" Margin="49,287,0,0" VerticalAlignment="Top" Foreground="White"/>
        <TextBox HorizontalAlignment="Left" Margin="97,285,0,0" TextWrapping="Wrap" Text="{Binding TitleS}" VerticalAlignment="Top" Width="150"/>
        <Label Content="Nb Saison" HorizontalAlignment="Left" Margin="21,322,0,0" VerticalAlignment="Top" Foreground="White" />
        <TextBox HorizontalAlignment="Left" Margin="97,320,0,0" TextWrapping="Wrap" Text="{Binding NbSeasonS}" VerticalAlignment="Top" Width="150"/>
        <Label Content="Résumé" HorizontalAlignment="Left" Margin="33,359,0,0" VerticalAlignment="Top" Foreground="White" />
        <TextBox HorizontalAlignment="Left" Margin="97,355,0,0" TextWrapping="Wrap" Text="{Binding ContentS}" VerticalAlignment="Top" Width="150"/>
        <Button Command="{Binding ASerieCommand}" Content="VALIDER" FontFamily="Verdana" Margin="124,389,74,0" VerticalAlignment="Top" HorizontalAlignment="Center"/>

    </Grid>
</Window>

<Window x:Class="Videothèque2.AddElementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Videothèque2"
        xmlns:viewModel="clr-namespace:Videothèque2.ViewModels"
        mc:Ignorable="d"
        Title="AddElementWindow" Height="405.738" Width="300">
    <Window.DataContext>
        <viewModel:AddElementWindowViewModel></viewModel:AddElementWindowViewModel>
    </Window.DataContext>
    <Window.Resources>
        <SolidColorBrush x:Key="WindowBrush" Color="Azure"/>
    </Window.Resources>
    <Window.Style>
        <Style TargetType="{x:Type Window}">
            <Setter Property="Background" Value="{StaticResource WindowBrush}"/>
        </Style>
    </Window.Style>
    <Grid>

        <TextBlock HorizontalAlignment="Left" Margin="110,35,0,0" TextWrapping="Wrap" Text="Ajout d'un Film" VerticalAlignment="Top"/>
        <Label Content="Nom" HorizontalAlignment="Left" Margin="28,67,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.931,-0.109"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="85,67,0,0" TextWrapping="Wrap" Text="{Binding TitleF}" VerticalAlignment="Top" Width="149"/>
        <Label Content="Date" HorizontalAlignment="Left" Margin="29,108,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.931,-0.109"/>
        <DatePicker HorizontalAlignment="Left" SelectedDate="{Binding LastViewF}" Margin="85,108,0,0" VerticalAlignment="Top"/>
        <Button Command="{Binding AFilmCommand}" Content="Valider" HorizontalAlignment="Left" Margin="85,145,0,0" VerticalAlignment="Top" Width="149"/>

        <TextBlock HorizontalAlignment="Left" Margin="110,187,0,0" TextWrapping="Wrap" Text="Ajout d'une Série" VerticalAlignment="Top"/>
        <Label Content="Nom" HorizontalAlignment="Left" Margin="30,213,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.931,-0.109"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="97,213,0,0" TextWrapping="Wrap" Text="{Binding TitleS}" VerticalAlignment="Top" Width="149"/>
        <Label Content="Nb Saison" HorizontalAlignment="Left" Margin="2,249,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.931,-0.109"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="97,251,0,0" TextWrapping="Wrap" Text="{Binding NbSeasonS}" VerticalAlignment="Top" Width="149"/>
        <Label Content="Date" HorizontalAlignment="Left" Margin="30,282,0,0" VerticalAlignment="Top" RenderTransformOrigin="-2.931,-0.109"/>
        <DatePicker HorizontalAlignment="Left" SelectedDate="{Binding LastViewS}" Margin="97,284,0,0" VerticalAlignment="Top"/>
        <Button Command="{Binding ASerieCommand}" Content="Valider" HorizontalAlignment="Left" Margin="97,324,0,0" VerticalAlignment="Top" Width="149"/>

    </Grid>
</Window>

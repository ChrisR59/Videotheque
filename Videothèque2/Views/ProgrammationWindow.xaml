<Window x:Class="Videothèque2.Views.ProgrammationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Videothèque2.Views"
        xmlns:viewModel="clr-namespace:Videothèque2.ViewModels"
        mc:Ignorable="d"
        Title="ProgrammationWindow" Height="450" Width="800">
    <Window.DataContext>
        <viewModel:ProgrammationWindowViewModel></viewModel:ProgrammationWindowViewModel>
    </Window.DataContext>
    <Grid>
        <ListView ItemsSource="{Binding ListElements}" SelectedItem="{Binding Element}" HorizontalAlignment="Left" Height="269" Margin="63,70,0,0" VerticalAlignment="Top" Width="681">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="350" Header="Titre" DisplayMemberBinding="{Binding Title}"/>
                    <GridViewColumn Width="200" Header="Programmation" DisplayMemberBinding="{Binding ToWatchString}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Command="{Binding ProgramEltCommand}" Content="Programmer" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="322,0,320,25" Width="100"></Button>
    </Grid>
</Window>
